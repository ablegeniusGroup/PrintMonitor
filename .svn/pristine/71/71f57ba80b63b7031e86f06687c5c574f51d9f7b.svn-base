.background {
    -fx-background-color: #1d1d1d;
    -fx-border-color: red;
    -fx-border-width: 2px;
}

.label {
    -fx-font-size: 30pt;
    -fx-font-family: "Segoe UI Semibold";
    -fx-text-fill: white;
    -fx-opacity: 0.6;
}
.button{
    -fx-font-size: 30pt;
    -fx-text-fill: white;
    -fx-background-color: #fcc101;
}